<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-user<% } else { %>addUsers<% } %>" method="POST">
            <div class="form-control">
                <label for="username">User Name</label>
                <input type="text" name="username" id="username" value="<% if (editing) { %><%= user.username %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%= user.email %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= user._id %>" name="userId">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update user<% } else { %>Add user<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>